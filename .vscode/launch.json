    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug",
            "protocol":"inspector",
            "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
            "console":"integratedTerminal",
            "env": {
                "NODE_ENV": "default"
            },
            "args": [
                "./test/features/*.feature",
                "--tags=@debug",
                "-r",
                "./test/step-definitions/",
                "-f",
                "json:./test/output/report/cucumber-json-report.json"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "sit",
            "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
            "env": {
                "NODE_ENV": "sit"
            },
            "args": [
                "./test/features/*.feature",
                "--tags=@debug",
                "-r",
                "./test/step-definitinos/",
                "-f",
                "json:./test/output/report/cucumber-json-report.json"
            ]
        }
    ]
}